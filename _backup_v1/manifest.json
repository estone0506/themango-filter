{
  "manifest_version": 3,
  "name": "더망고 필터 수집 익스텐션",
  "version": "1.0.0",
  "description": "더망고 관리자 페이지에서 필터 정보를 수집하는 크롬 익스텐션",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://tmg4084.mycafe24.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "https://tmg4084.mycafe24.com/*" ],
      "js": [ "content.js" ]
    }
  ]
}
